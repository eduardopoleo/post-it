<% obj.each do |comment| %>
  <div class="row">

    <div class="well span0 text-center">
      <% if logged_in? %>
        <%= link_to(vote_post_comment_path(comment.post,comment, vote: true), method: 'post') do %>
          <i class = 'icon-arrow-up'></i>
        <% end %>
        <br/>
      <% end %>
      
      <%=comment.total_value%> votes
      
      <% if logged_in? %>
        <br/>
        <%= link_to(vote_post_comment_path(comment.post,comment, vote: false), method: 'post') do %>
          <i class = 'icon-arrow-down'></i>
        <% end %>
      <% end %>
    </div>

    <div class="well span8">
      <em><%=comment.body  %></em>

      <% if display_source %>
        on <%= link_to comment.post.title, post_path(comment.post)  %>
      <% end %>
      
      <p><span class ='quiet'>by</span> <%=link_to comment.creator.name, user_path(comment.creator) %> <small> at <%=fix_date(comment)%></small></p>
    </div>
  </div>
<% end %>