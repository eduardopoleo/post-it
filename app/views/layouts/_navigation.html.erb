<ul class="nav">
  
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <!--Remove toggle and caret for a normal nice-looking button -->
  <div class="btn-group">
    <button class="btn btn-small dropdown-toggle" data-toggle="dropdown">Categories <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <% @categories.each do |cat| %>
          <li><%= link_to cat.name, category_path(cat)%></li>
      <% end %>
      <% if logged_in? && current_user.admin?%>
        <li class="divider"></li>
        <li><%= link_to(new_category_path) do%>
          <i class="icon-plus"></i>
          Create Category
        <%end%>
        </li>
      <% end %>
    </ul>
  </div>

  <% if logged_in? %>

  <div class="btn-group ">
    <%= link_to(new_post_path) do %>
      <button class="btn btn-small btn-success"><i class="icon-plus"></i> New Post!</button>
    <%end%>
  </div>

    <div class="btn-group nav-item">

      <button class="btn btn-small dropdown-toggle" data-toggle="dropdown"> <%=current_user.name%> <span class="caret"></span></button>

      <ul class="dropdown-menu">
        <li>
          <%= link_to(edit_user_path(current_user)) do%>
            <i class = 'icon-pencil'></i>
            edit profile
          <% end %>

          <%= link_to(user_path(current_user)) do%>
            <i class = 'icon-user'></i>
            view profile
          <% end %>

          <%= link_to(logout_path) do%>
            <i class = 'icon-circle-arrow-left'></i>
            log out
          <% end %>

        </li>
      </ul>
    </div>

  <% else %>

    <div class="btn-group">
      <%= link_to(new_user_path) do %>
        <button class="btn btn-success"><i class="icon-plus"></i> New User!</button>
      <%end%>
    </div>

    <div class="btn-group">
      <%= link_to(login_path) do %>
        <button class="btn">Log in</button>
      <%end%>
    </div>

  <% end %>

</ul>




