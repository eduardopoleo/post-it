<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <br/>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <br/>
    <p><strong>Temporary</strong></p>
    <%= f.label :user_id %>
    <%= f.number_field :user_id%>
    <br/>
    <p>Categories</p> 
    <%= check_box_tag(:sports) %>
    <%= label_tag(:sports, "Sports") %>
    <%= f.submit "Post!", class: "btn btn-primary" %>
<% end %>